<h1>Listing all articles</h1>
<p>
 <%= link_to "Create new article", new_article_path%>
</p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @articles_list.each do |article_display|%>
  <tr>
    <td><%= article_display.title %></td>
    <td><%= article_display.description %></td>
    <td><%= link_to 'Edit', edit_article_path(article_display) %></td>
    <td><%= link_to 'Show', article_path(article_display) %></td>
    <td><%= link_to 'Delete', article_path(article_display), method: :delete, data: {confirm: "Are you sure?" } %></td>
  </tr>
      <% end %>
</table>